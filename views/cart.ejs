<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Cart | SCATCH</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet" />
</head>

<body class="min-h-screen bg-gradient-to-tr from-blue-300 to-yellow-300  font-[Poppins]">

  <!-- Header -->
  <header class="bg-white shadow py-4 px-10 flex justify-between items-center ">
    <h1 class="text-xl font-bold text-orange-600">SCATCH</h1>

    <nav class="flex items-center gap-8 text-gray-700">
      <a href="/shop" class="hover:text-orange-500">Shop</a>
      <a href="/account" class="hover:text-orange-500">My Account</a>
      <a href="/logout" class="hover:text-orange-500">Logout</a>
    </nav>
  </header>

  <!-- Main Cart Section -->
  <div class="max-w-6xl mx-auto mt-10 grid grid-cols-1 lg:grid-cols-3 gap-8 px-4 ">

    <!-- Cart Items -->
    <div class="lg:col-span-2 bg-white shadow rounded-lg p-6">
      <h2 class="text-2xl font-semibold mb-4">Your Cart</h2>
    
     <% user.cart.forEach((cartItem)=>{ %>

    
      <div class="flex items-center justify-between py-4 border-b">
        <div class="flex items-center gap-4">
          <img  src="data:image/jpeg;base64,<%= cartItem.product.image.toString('base64') %>"  class="w-20 h-20 rounded object-cover" />
          <div>
            <h3 class="font-semibold text-lg"><%= cartItem.product.name %></h3>
            <p class="text-gray-500 text-sm">₹ <%= cartItem.product.price %></p>
          </div>
        </div>

        <div class="flex items-center gap-4">
          <input type="number" value="<%= cartItem.quantity %>" min="1" class="w-16 border rounded px-2 py-1" />
        <a href="/users/delete/<%=cartItem.product._id %>">
             <button class="text-red-500 hover:text-red-700 text-xl">
            <i class="ri-delete-bin-line"></i>
          </button>
        </a> 
        </div>
      </div>

    <% }) %>

    </div>

    <!-- Summary Section -->
    <div class="bg-white shadow rounded-lg p-6 h-fit">
      <h2 class="text-xl font-semibold mb-4">Order Summary</h2>

      <div class="flex justify-between mb-2">
        <span class="text-gray-600">Subtotal</span>
         <% let subtotal=0;let discount=0; %>
             <% user.cart.forEach(cartItem=>{ %>
                <% subtotal+=(cartItem.quantity*cartItem.product.price)%>
                <% discount+=(cartItem.product.price*cartItem.product.discount)/100 %>
                 <% }); %>
                
        <span class="font-medium">₹<%= subtotal %></span>
      </div>

      <div class="flex justify-between mb-2">
        <span class="text-gray-600">Discount</span>
        <span class="font-medium">₹<%= discount %></span>
      </div>

      <div class="flex justify-between mb-2">
        <span class="text-gray-600">Shipping</span>
        <span class="font-medium">₹ 80</span>
      </div>

      <div class="flex justify-between text-lg font-semibold mt-4 border-t pt-4">
        <span>Total</span>
        <span>₹<%= subtotal-discount+80 %></span>
      </div>

      <button class="w-full mt-6 bg-orange-500 hover:bg-orange-600 text-white py-2 rounded-lg text-lg font-medium transition">
        Proceed to Checkout
      </button>
    </div>

  </div>

  <div class="h-20"></div>

</body>
</html>
