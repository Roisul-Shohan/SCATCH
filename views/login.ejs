<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Sign In | SCATCH</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen flex items-center justify-center bg-gradient-to-tr from-orange-300 to-yellow-300 font-[Poppins] px-4">

  <!-- Flash Error Message -->
  <% if (error && error.length > 0) { %>
    <div class=" error absolute top-6 left-1/2 transform -translate-x-1/2 w-11/12 sm:w-1/2 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg shadow-md flex items-start gap-3 animate-fade-in">
      <svg class="w-6 h-6 flex-shrink-0 text-red-500 mt-0.5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01M4.93 4.93l14.14 14.14M9.17 9.17a8 8 0 0111.31 11.31M4.93 4.93A8 8 0 0016.24 16.24" />
      </svg>
      <p class="text-sm font-medium"><%= error[0] %></p>
    </div>
  <% } %>

  <!-- Login Card -->
  <div class="bg-gray-100 rounded-2xl shadow-xl p-8 w-full max-w-md relative">
    
    <!-- Logo -->
    <div class="flex justify-center mb-6">
      <img src="/images/logo.png" alt="SCATCH" class="w-20 h-20 object-cover rounded-full">
    </div>

    <h1 class="text-3xl font-extrabold text-gray-900 mb-6 text-center">Sign In</h1>

    <!-- Login Form -->
    <form action="/users/login" method="POST" class="flex flex-col gap-4">

      <!-- Email -->
      <div class="flex flex-col">
        <label for="email" class="mb-1 font-medium text-gray-700">Email</label>
        <input type="email" name="email" id="email" placeholder="example@domain.com" 
          class="px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-400" required>
      </div>

      <!-- Password -->
      <div class="flex flex-col">
        <label for="password" class="mb-1 font-medium text-gray-700">Password</label>
        <input type="password" name="password" id="password" placeholder="******" 
          class="px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-400" required>
      </div>

      <!-- Submit Button -->
      <button type="submit" 
        class="mt-4 px-6 py-3 bg-orange-500 text-white font-semibold rounded-full shadow-md hover:bg-orange-600 transition duration-300">
        Sign In
      </button>

    </form>

    <!-- Link to Sign Up -->
    <p class="mt-6 text-center text-gray-600 text-sm">
      Donâ€™t have an account? 
      <a href="/signup" class="text-orange-500 font-semibold hover:underline">Sign Up</a>
    </p>

  </div>

  <!-- Fade-in Animation -->
  <style>
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(-10px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .animate-fade-in {
      animation: fadeIn 0.5s ease-out;
    }
  </style>
   <script>
    setTimeout(() => {
      const flash = document.getElementById('error');
      if (flash) flash.remove();
    }, 2000); 
  </script>

</body>
</html>
